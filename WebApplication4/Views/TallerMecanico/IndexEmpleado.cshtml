@model IEnumerable<WebApplication4.Models.OrdenTrabajo>

@{
    ViewBag.Title = "Index Empleado";
}

<h2>Index</h2>

<p>
	@Html.ActionLink("Create new order", "Create") |
	@Html.ActionLink("Register a vehicle", "CreateVehicle")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fechaIngreso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.detalle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Empleado.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vehiculo.marca)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fechaIngreso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.detalle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Empleado.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vehiculo.marca)
        </td>
		<td>
			@if (!item.cerrada)
			{
				@Html.ActionLink("Edit", "Edit", new { id = item.idOrdenTrabajo });
				<label>|</label>
			}

			@Html.ActionLink("Details", "Details", new { id = item.idOrdenTrabajo }) |
			@Html.ActionLink("Delete", "Delete", new { id = item.idOrdenTrabajo })
		</td>
    </tr>
}

</table>
